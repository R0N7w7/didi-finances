generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Check {
  id            Int         @id @default(autoincrement())
  project       String
  checkNumber   Int
  amount        Float
  month         String
  requestNumber String
  part          String
  area          String
  observations  String?
  receiver      String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  Associated    Associated? @relation(fields: [associatedId], references: [id])
  associatedId  Int?
}

model Associated {
  id        Int      @id @default(autoincrement())
  name      String // Nombre de la persona o razón
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  checks Check[] // Relación uno a muchos con cheques
}
